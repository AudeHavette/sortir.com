<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir.com{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://kit.fontawesome.com/37a12967b6.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    <header>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}


        <img src="{{ asset('images/sortir.jpg') }}" alt="Sortir.com" class="rotate-on-success" >



        <div class="letter" style="left: 100px;">S</div>
        <div class="letter" style="left: 200px;">O</div>
        <div class="letter" style="left: 300px;">R</div>



        <nav>
            <ul>
                <li>
                    <a href="{{ path('app_home') }}" style="color: white">Accueil</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{path('admin_inscription')}}" style="color: white">Inscription (by Admin)</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_liste') }}" style="color: white">Admin</a>
                    </li>
                {% endif %}

                {% if app.user %}
                <li>
                    <a href="{{ path('app_mon_profil', {'id' : app.user.id}) }} " style="color: white">Profil</a>
                </li>
                {% endif %}

                {% if app.user %}
                    <li>
                        <a href="{{ path('app_logout') }}" style="color: white">Déconnexion</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('app_login') }}" style="color: white">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </nav>

        <div class="letter" style="left: 400px;">T</div>
        <div class="letter" style="left: 500px;">I</div>
        <div class="letter" style="left: 600px;">R</div>



    </header>
    {% for label, messages in app.flashes %}
        {%  for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {%  endfor %}
    {%  endfor %}
        <main>
            {%  block body %}{% endblock %}
        </main>
        <footer>
            <div>&copy; Site developpé par le groupe ABC dans le cadre d'un projet à l'ENI :

                <ul>
                    <li>
                        <a href="https://www.linkedin.com/in/aude-havette" style="color: white">Aude Havette</a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/brandon-chartier/" style="color: white">Brandon Chartier</a>
                    </li>
                    <li>Clément Morel
                    </li>
                </ul>
            </div>
        </footer>

    </body>
</html>
    </body>
</html>
