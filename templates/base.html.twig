<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir.com{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <img src="{{ asset('images/sortir.jpg') }}" alt="Sortir.com">

        <nav>
            <ul>
                {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a href="">Villes</a>
                </li>
                <li>
                    <a href="">Campus</a>
                </li>
                {% endif %}
                <li>
                    <a href="{{ path('app_home') }}">Accueil</a>
                </li>

                {% if app.user %}
                <li>
                    <a href="{{ path('app_mon_profil', {'id' : app.user.id}) }}">Mon profil</a>
                </li>
                {% endif %}

                {% if app.user %}
                    <li>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </header>
    {% for label, messages in app.flashes %}
        {%  for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {%  endfor %}
    {%  endfor %}
        <main>
            {%  block body %}{% endblock %}
        </main>
        <footer>
            <div>&copy; {{ "now"|date_modify('+1 hour')|date('d/m/y H:i:s') }}</div>
        </footer>
    </body>
</html>
